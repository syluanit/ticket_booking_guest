<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_marginTop="5dp"
        android:background="@color/darkGrey"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        ></View>

    <LinearLayout
        android:paddingTop="10dp"
        android:background="@color/grey"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Giá một vé"
                android:textSize="@dimen/body_text_size" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="3"
                    android:gravity="right"
                    android:id="@+id/tv_priceTicket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text_route"
                    android:textSize="@dimen/body_text_size_large"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/color_text_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="VNĐ"
                    android:textSize="@dimen/body_text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Giờ đi:"
                    android:textSize="@dimen/body_text_size" />

                <TextView
                    android:text="sdljsdhá"
                    android:textColor="@color/color_text_route"
                    android:textStyle="bold"
                    android:textSize="@dimen/body_text_size"
                    android:id="@+id/tv_timeDep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Giờ đến:"
                    android:textSize="@dimen/body_text_size" />

                <TextView

                    android:text="sdljsdhá"
                    android:textColor="@color/color_text_route"
                    android:textStyle="bold"
                    android:textSize="@dimen/body_text_size"
                    android:id="@+id/tv_timeArr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textSize="@dimen/body_text_size"
        android:paddingLeft="40dp"
        android:paddingRight="60dp"
        android:background="@drawable/button_route"
        android:text="Chọn Ghế"
        android:id="@+id/btnBookThis"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    </LinearLayout>

    <View
        android:layout_marginBottom="5dp"
        android:background="@color/darkGrey"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        ></View>

</LinearLayout>