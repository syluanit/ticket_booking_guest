<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_marginTop="5dp"
        android:background="@color/darkGrey"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        ></View>

    <LinearLayout
        android:padding="10dp"
        android:background="@color/grey"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Điểm đi:"
                        android:textSize="@dimen/body_text_size" />

                    <TextView
                        android:paddingLeft="10dp"
                        android:gravity="left"
                        android:text="sdljsdhá"
                        android:textColor="@color/color_text_route"
                        android:textStyle="bold"
                        android:textSize="@dimen/body_text_size"
                        android:id="@+id/tv_startPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Điểm đến:"
                        android:textSize="@dimen/body_text_size" />

                    <TextView
                        android:paddingLeft="10dp"
                        android:gravity="left"
                        android:text="sdljsdhá"
                        android:textColor="@color/color_text_route"
                        android:textStyle="bold"
                        android:textSize="@dimen/body_text_size"
                        android:id="@+id/tv_endPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="Giá một vé"
                    android:textSize="@dimen/body_text_size" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="3"
                        android:gravity="right"
                        android:id="@+id/tv_priceTicketHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_route"
                        android:textSize="@dimen/body_text_size_large"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="@color/color_text_route"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="VNĐ"
                        android:textSize="@dimen/body_text_size" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Loại ghế: "
                        android:textSize="@dimen/body_text_size" />

                    <TextView
                        android:text="sdljsdhá"
                        android:textColor="@color/color_text_route"
                        android:textStyle="bold"
                        android:textSize="@dimen/body_text_size"
                        android:id="@+id/tv_typeSeat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Ngày đi: "
                        android:textSize="@dimen/body_text_size" />

                    <TextView
                        android:text="sdljsdhá"
                        android:textColor="@color/color_text_route"
                        android:textStyle="bold"
                        android:textSize="@dimen/body_text_size"
                        android:id="@+id/tv_dateHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Giờ đi: "
                        android:textSize="@dimen/body_text_size" />

                    <TextView
                        android:text="sdljsdhá"
                        android:textColor="@color/color_text_route"
                        android:textStyle="bold"
                        android:textSize="@dimen/body_text_size"
                        android:id="@+id/tv_timeDepHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Giờ đến: "
                        android:textSize="@dimen/body_text_size" />

                    <TextView

                        android:text="sdljsdhá"
                        android:textColor="@color/color_text_route"
                        android:textStyle="bold"
                        android:textSize="@dimen/body_text_size"
                        android:id="@+id/tv_timeArrHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Ghế đặt: "
                        android:textSize="@dimen/body_text_size" />

                    <TextView
                        android:textColor="@color/color_text_route"
                        android:textStyle="bold"
                        android:textSize="@dimen/body_text_size"
                        android:id="@+id/tv_bookingseat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--<Button-->
            <!--android:textColor="@color/white"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:textSize="@dimen/body_text_size"-->
            <!--android:paddingLeft="40dp"-->
            <!--android:paddingRight="40dp"-->
            <!--android:background="@drawable/button_history"-->
            <!--android:text="Xem lại vé"-->
            <!--android:id="@+id/btnHistory"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="30dp" />-->

    </LinearLayout>

    <View
        android:layout_marginBottom="5dp"
        android:background="@color/darkGrey"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        ></View>

</LinearLayout>